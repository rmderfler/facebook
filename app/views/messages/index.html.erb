<div class="page-header">
  <h1>All of the messages</h1>
</div>

<%= link_to "Post a New message", new_message_path, class: "btn btn-success" %>

<% @messages.each do |message| %>
<div class="message">
  <div class="row">
    <div class="span1">

      <%=  image_tag message.user.gravatar_url %>

    </div>
    <div class="span6">
      <strong><%= message.name %></strong>
      <p><%= message.message %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(message.created_at) + " ago", message %> 
        <span class="admin">
          | <%= link_to "Edit", edit_message_path(message) %> | 
          <%= link_to "Delete", message, method: :delete, data: { confirm: "Are you sure your want to delete this message?"} %>
        </span>
      </div>
    </div>
  </div>
</div>
<% end %>