<!DOCTYPE html>
<html>
<head>
  <title>Spacebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse" role="navigation">
    <div class="navbar-inner">
      <div class="container">
        <a href="#" class="navbar-brand"> Spacebook </a> |
        
        <%= link_to "All Messages", list_path%>
      
      <% if user_signed_in? %>
        <span class="nav pull-right"><%= link_to current_user.name, edit_user_registration_path %></span>
        <span class="more-padding-on-right"><%= link_to "Log out... ", logout_path %></span>
        <span class="more-padding-on-right"><%= link_to "Activity feed ", activities_path %></span>
         
        <% else %>
          <%= link_to "Join", register_path %>
          <%= link_to "Sign In", login_path %>

        <% end %>
      
      </div>
    </div>
  </div>
  <div class="container">
    <% flash.each do |type, message| %>
      <div class="alert <%= flash_class type.to_s %>">
        <button class="close" data-dismiss="alert">x</button>
        <%= message %>
      </div>
    <% end %>  

    
    
    <%= yield %>
    <%= debug(params) %> 
  </div>
</body>
</html>
